<Window x:Class="ZoomURLGetter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" d:DesignWidth="407.709" d:DesignHeight="237.778">
    <Grid>
        <DockPanel x:Name="panel" Background="Azure" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Top">
                <Button x:Name="CallGraphButton" Content="Show Mail List" HorizontalAlignment="Right" Padding="5" Click="CallGraphButton_Click" Margin="5" FontFamily="Segoe Ui"/>
                <Button x:Name="SignOutButton" Content="Sign-Out" HorizontalAlignment="Right" Padding="5" Click="SignOutButton_Click" Margin="5" Visibility="Collapsed" FontFamily="Segoe Ui"/>
            </StackPanel>
            <Label Content="Results" Margin="0,0,0,-5" FontFamily="Segoe Ui" DockPanel.Dock="Top" />
            <RichTextBox x:Name="richTB" IsDocumentEnabled="True" RenderTransformOrigin="0.5,0.5" Margin="3,3,3,3" IsReadOnly="True" DockPanel.Dock="Top"/>
        </DockPanel>
    </Grid>
</Window>
